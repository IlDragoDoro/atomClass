<?php
class Oca{
    public $d1;
    public $d2;
    public $contador=0;
    public function __construct(){
        $d1 = rand(0,12);
        $d2 = rand(0,12);
        print "<h1>OCA</h1>";
        print "Dado 1  = ".$d1."<br>Dado 2 = ".$d2."";
    }
    
    public function __destruct($d1,$d2,$contador){
        
            if($this->d1 == 12 || $this->d2 == 12 ||($this->d1+$this->d2)==12){
                $this->contador++;
                print "Felicidades,has sacado el numero 12 tras ".$this->contador." intentos.";          
            }else{
                $this->contador++;            
            }
        }
        
}

$oca = new Oca();
$oca->__destruct();
?>